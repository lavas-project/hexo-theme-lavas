<header id="header">
    <div id="header-outer">
        <div id="header-title">
            <h1 id="logo"><%= config.title %></h1>
        </div>
        <nav id="main-nav">
            <a id="main-nav-toggle" class="nav-icon" @click="showMainNav"><i class="material-icons">list</i></a>

            <%
                var active;
                for (var i in theme.menu) {
                    var url = url_for(theme.menu[i]);
                    if (
                        (url === '/' && path === 'index.html')
                        || (url !== '/' && ('/' + path).indexOf(url) !== -1)) {
                        active = 'active';
                    }
                    else {
                        active = '';
                    }
            %>
                <a class="main-nav-link <%= active %>" href="<%= url %>"><%- __(i) || i %></a>
            <% } %>

            <%- partial('_partial/mobile-nav', null, {cache: !config.relative_link}) %>

        </nav>
        <nav id="sub-nav">

            <% if (theme.rss) { %>
                <a id="nav-rss-link" class="nav-icon" href="<%- theme.rss %>" title="<%= __('rss_feed') %>"></a>
            <% } %>

        </nav>
    </div>
</header>
