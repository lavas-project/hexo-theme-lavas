<% if (post.prev || post.next) { %>
    <nav id="article-nav">

        <% if (post.prev) { %>
            <a href="<%- url_for(post.prev.path) %>" id="article-nav-newer" class="article-nav-link-wrap">
                <div class="article-nav-title">
                    <i class="material-icons fa-arrow-left">arrow_back</i>
                    <div class="article-nav-title-text">
                        <% if (post.prev.title) { %>
                            <%= post.prev.title %>
                        <% } else { %>
                            (no title)
                        <% } %>
                    </div>
                </div>
            </a>
        <% } %>

        <% if (post.next) { %>
            <a href="<%- url_for(post.next.path) %>" id="article-nav-older" class="article-nav-link-wrap">
                <div class="article-nav-title">
                    <div class="article-nav-title-text">
                        <% if (post.next.title) { %>
                            <%= post.next.title %>
                        <% } else { %>
                            (no title)
                        <% } %>
                    </div>
                    <i class="material-icons fa-arrow-right">arrow_forward</i>
                </div>
            </a>
        <% } %>

    </nav>
<% } %>
