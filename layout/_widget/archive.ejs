    <div class="widget-wrap">
        <h3 class="widget-title widget-title-archive"><i class="material-icons">folder_open</i><%= __('archive_a') %></h3>
        <div class="widget">
            <%- list_archives({show_count: theme.show_count, type: theme.archive_type, format: 'YYYY/MM'}) %>
        </div>
    </div>
<% } %>
