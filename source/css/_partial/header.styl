#header
    height: header-height
    line-height: header-height
    background: theme-color
    position: fixed
    z-index: 9999
    top: 0
    left: 0
    right: 0

#header-outer
    height: 100%
    position: relative

#header-inner
    position: relative
    overflow: hidden

#banner
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: url(banner-url) center #000
    background-size: cover
    z-index: -1

#header-title
    text-align: center
    position: absolute
    left: 60px
    right: 60px
    top: 0

$logo-text
    text-decoration: none
    color: #fff
    font-weight: 300
    text-shadow: 0 1px 4px rgba(0, 0, 0, 0.3)

#logo
    @extend $logo-text
    font-size: logo-size
    letter-spacing: 2px
    font-weight: normal
    letter-spacing: 0
    ellipsis()

#subtitle
    @extend $logo-text
    font-size: subtitle-size
    line-height: subtitle-size
    letter-spacing: 1px

#subtitle-wrap
    margin-top: subtitle-size

#main-nav
    float: left
    position: relative
    z-index: 1
    font-weight: 300
    height: 100%
    @media mq-normal
        margin-left: 20px

$nav-link
    float: left
    color: #fff
    text-decoration: none
    text-shadow: 0 1px rgba(0, 0, 0, 0.2)
    transition: opacity 0.2s
    display: block
    padding: 0 15px
    &:hover
        opacity: 1

.nav-icon
    @extend $nav-link
    font-family: font-icon
    text-align: center
    font-size: font-size
    width: font-size
    height: font-size
    padding: 0 20px
    position: relative
    cursor: pointer
    height: 100%

.main-nav-link
    @extend $nav-link
    letter-spacing: 1px
    padding: 0 16px
    font-size: 16px
    transition: all ease .3s
    height: 100%
    box-sizing: border-box
    &:hover
        background: rgba(255, 255, 255, .3)
    @media mq-mobile
        display: none
    &.active
        border-bottom: solid 3px #fff;

#main-nav-toggle
    display: none
    @media mq-mobile
        display: block
    i
        font-size: 24px

#sub-nav
    float: right
    position: relative;
    z-index: 1;
