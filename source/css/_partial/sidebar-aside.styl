#sidebar
    @media mq-normal
        column(sidebar-column)

.widget-wrap
    margin: block-margin article-padding

.widget-title
    @extend $block-caption
    font-size: 14px
    .material-icons
        margin-right: 3px

.widget
    color: color-sidebar-text
    background: #f2f5f6
    text-shadow: 0 1px #fff
    padding: 15px
    border-radius: 3px
    li
        ellipsis()
    a
        color: color-grey-link
        text-decoration: none
        padding: 8px 0
        display: inline-block;
        line-height: 16px
        transition: color ease .3s
        &:hover
            color: color-link
    ul, ol, dl
        ul, ol, dl
            margin-left: 15px
            list-style: disc
