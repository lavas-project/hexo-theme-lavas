@media mq-mobile
    #mobile-nav
        position: absolute
        top: 110%
        left: 13px
        background: color-mobile-nav-background
        border-right: 1px solid #fff
        transition: .2s ease-out
        z-index: 10001
        display: block
        line-height: 48px
        font-size: 16px
        padding: 8px 0
        border-radius: 2px
        transform: scale(0)
        transform-origin: left top 0px
        box-shadow: 0 5px 5px -3px rgba(0, 0, 0, .2), 0 8px 10px 1px rgba(0, 0, 0, .14), 0 3px 14px 2px rgba(0, 0, 0, .12)
        .mobile-nav-on &
            transform: scale(1)
    .mobile-nav-link
        display: block
        color: color-link
        text-decoration: none
        padding: 0 25px
        min-width: 32px
    #header
        height: wise-header-height
        line-height: wise-header-height
    #footer
        position: relative
        padding: 25px 0
    .wrap
        top: wise-header-height
    .skeleton
        position: fixed
        display: block
        top: wise-header-height
        left: 0
        width: 100%
        z-index: 0
    .theme-img-wrapper
        .theme-img-mobile
            display: block
            width: 100%
        .theme-img-pc
            display: none
    .article-inner
        box-shadow: none
        border: none
